<div id="slideshow-{{ page.id }}" class="slideshow" data-page-id="{{ page.id }}">
	
	{% include 'BRSPageBundle:Page:content.html.twig'%}
	
	<div class="slide-indicators">
	
		{% for key, content_block in content %}
			
			<a href="#{{ key+1 }}">{{ key+1 }}</a>
			
		{% endfor %}
		
	</div>
	
	<div class="slide-back"><a href="#">&lt;&lt;</a></div>
				
	<div class="slide-next"><a href="#">&gt;&gt;</a></div>

</div>

<script language="JavaScript">
	$(function(){
		
		var slideshow = new SlideWidget({
			container: '#slideshow-{{ page.id }}',
			startSlide: 0,
			speed: 500,
			auto: 8000,
			margin: 20
		});
	});
</script>